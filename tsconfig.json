{
    "compilerOptions": {
        "outDir": "dist",
		"module": "ESNext",
		"target": "es5",
		"jsx": "react-jsx",
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"allowJs": true,
		"baseUrl": ".",
		"esModuleInterop": true,
		"lib": ["es2022", "DOM", "DOM.Iterable"],
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"paths": {
			"assets/*": ["./src/assets/*"],
			"pages/*": ["./src/pages/*"],
			"store/*": ["./src/store/*"],
			"components/*": ["./src/components/*"],
			"utils/*": ["./src/utils/*"],
			"hooks/*": ["./src/hooks/*"],
		}
	},
	"ts-node": {
		"compilerOptions": {
			"module": "CommonJS"
		}
	}
}