{
    "compilerOptions": {
        "allowJs": true,
        "esModuleInterop": true,
        "moduleDetection": "force",
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "target": "es2022",

        "noUncheckedIndexedAccess": true,
        "strict": true,

        "moduleResolution": "NodeNext",
        "module": "NodeNext",
        "outDir": "dist",
        "sourceMap": true,

        "lib": ["es2022", "DOM", "DOM.Iterable"],

        "jsx": "react-jsx"
    },
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS"
        }
    }
}